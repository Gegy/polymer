{
  "schemaVersion": 1,
  "id": "polymer-virtual-entity",
  "version": "${version}",
  "name": "Polymer (Virtual Entity)",
  "description": "Server side API for creation of virtual entities",
  "authors": [
    "Patbox"
  ],
  "contact": {
    "homepage": "https://pb4.eu",
    "sources": "https://github.com/Patbox/polymer",
    "issues": "https://github.com/Patbox/polymer/issues"
  },

  "license": "LGPLv3",
  "icon": "assets/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": ["eu.pb4.polymer.virtualentity.impl.VirtualEntityMod"]
  },
  "accessWidener": "polymer-virtual-entity.accesswidener",
  "mixins": [
    "polymer-virtual-entity.mixins.json"
  ],

  "depends": {
    "polymer-common": ">=${version}",
    "fabricloader": ">=0.15.0"
  },
  "custom": {
    "modmenu": {
      "badges": [ "library" ],
      "links": { "modmenu.discord": "https://pb4.eu/discord" },
      "parent": "polymer-bundled",
      "update_checker": false
    }
  }
}
