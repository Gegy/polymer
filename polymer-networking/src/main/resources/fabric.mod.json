{
  "schemaVersion": 1,
  "id": "polymer-networking",
  "version": "${version}",
  "name": "Polymer (Networking)",
  "description": "Networking API with some bit of magic",
  "authors": [
    "Patbox"
  ],
  "contact": {
    "homepage": "https://pb4.eu",
    "sources": "https://github.com/Patbox/polymer",
    "issues": "https://github.com/Patbox/polymer/issues"
  },
  "entrypoints": {
    "main": ["eu.pb4.polymer.networking.impl.ServerPacketRegistry::register"],
    "client": ["eu.pb4.polymer.networking.impl.client.ClientPacketRegistry::register"]
  },
  "mixins": [
    "polymer-networking.mixins.json"
  ],
  "license": "LGPLv3",
  "icon": "assets/icon.png",
  "environment": "*",
  "depends": {
    "polymer-common": ">=${version}",
    "fabricloader": ">=0.15.0"
  },
  "custom": {
    "modmenu": {
      "badges": [ "library" ],
      "links": { "modmenu.discord": "https://pb4.eu/discord" },
      "parent": "polymer-bundled",
      "update_checker": false
    }
  }
}
